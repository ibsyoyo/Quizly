<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz ID: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quizID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mDisplayDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:freezesText="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/teacher_add_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAddQuestions"
        android:text="Add Questions" />

    <Button
        android:id="@+id/teacher_home_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBackButton"
        android:text="Back" />

</LinearLayout>
